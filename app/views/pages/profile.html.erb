  <div class="container-index d-flex justify-content-center align-items-center">
    <div class="row mb-4">
      <div class="col" style="width: 360px">
          <div class="text-center profile mb-4">
            <%= cl_image_tag @user.photo.key, class: "avatar-large mb-4 mt-3"%>
            <h2> <%= @user.first_name %> <%= @user.last_name %></h2>
            <p class="mb-4"><%= @user.email %></p>
          </div>

          <div class="row text-center profile mt-4 d-flex align-items-center profile">
            <div class="col d-flex flex-column align-items-center border-end">
              <h2><%= @reviews.count %></h2>
              <p>Recommendations</p>
            </div>
            <div class="col d-flex flex-column align-items-center border-end">
              <h2><%= @followers.count %></h2>
              <p>Followers</p>
            </div>
            <div class="col d-flex flex-column align-items-center">
              <h2><%= @followings.count %></h2>
              <p>Following</p>
            </div>
          </div>
          <p class="profile-h3">My recommendations</p>
          <div class="card-home">
                <% if @first_recommendation %>
                  <%= cl_image_tag @first_recommendation.photo.key %>
                  <div class="card-home-infos">
                    <h3 class="card-home-title"><%= @first_recommendation.name %></h3>
                    <p><%= @first_recommendation.category.name %></p>
                    <p class="card-home-rating"><%= star_rating(@first_recommendation.average_rating, 5) %></p>
                    </div>
                    <%= link_to 'See Details', @first_recommendation, class: 'btn-purple' %>
                <% end %>
                </div>

        <div class="dropdown mb-4">
        <button class="btn-drop-down dropdown-toggle" data-bs-toggle="dropdown">
          See all
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
          <% @recommendations.each do |spot| %>
            <li class="dropdown-item">
              <div class="card-home mb-2">
                <%= cl_image_tag spot.photo.key %>
                <div class="card-home-infos">
                  <h2 class="card-home-title"><%= spot.name %></h2>
                  <p><%= spot.category.name %></p>
                  <p class="card-home-rating"><%= star_rating(spot.average_rating, 5) %></p>
                </div>
               <%= link_to 'See Details', spot, class: 'btn-purple' %>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="text-center">
        <%= link_to "Add Recommendation", new_spot_path, class: "btn-new-recommendation" %>
      </div>

      <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn-purple-full-width" %>
      <p class="impressum text-center">pyper Â© All rights reserved.</p>
    </div>
  </div>
</div>
