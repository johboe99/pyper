  <div class="container-index mt-5 d-flex justify-content-center align-items-center">
    <div class="row mb-4">
      <div class="col">
          <div class="text-center">
            <h2 class="index-title">Profile</h2>
          </div>
          <div class="text-center profile mb-4">
            <%= cl_image_tag @user.photo.key, class: "avatar-large mb-2"%>
            <h2><%= @user.first_name %> <%= @user.last_name %></h2>
            <p><%= @user.email %></p>
          </div>

          <div class="row text-center profile mb-4">
            <div class="col d-flex flex-column align-items-center border-end">
              <h2 class="card-home-title"><%= @reviews.count %></h2>
              <p>Recommendations</p>
            </div>
            <div class="col d-flex flex-column align-items-center border-end">
              <h2 class="card-home-title"><%= @followers.count %></h2>
              <p>Followers</p>
            </div>
            <div class="col d-flex flex-column align-items-center">
              <h2 class="card-home-title"><%= @followings.count %></h2>
              <p>Following</p>
            </div>
          </div>

        <h2 class="index-title">My reccommendations</h2>
          <% @spots.each do |spot| %>
            <div class="card-home">
              <%= cl_image_tag spot.photo.key %>
              <div class="card-home-infos">
                <h2 class="card-home-title"><%= spot.name %></h2>
                <p><%= spot.category.name %></p>
              </div>
            </div>
          <% end %>
      <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn-purple" %>
    </div>
  </div>
</div>
