<div class="container-index mt-5 d-flex justify-content-center align-items-center">
  <div class="row mb-4">
    <div class="col">
      <%= cl_image_tag @spot.photo.key, class: "img-show" %>
      <h2 class="show-title text-center"><%= @spot.name %></h2>
      <p class="text-center"><%= star_rating(@average_rating, 5) %></p>
      <% if @reviews.first.tags.count >= 1 %>
        <p><%= @reviews.first.tags.map(&:name) %></p>
      <% end %>
      <div class="description-section">
        <h3 class="show-h3">Description</h3>
        <p><%= @spot.description %></p>
      </div>

      <div class="opening-hours-section">
        <h3 class="show-h3">Opening Hours</h3>
        <div class="opening-hours">
          <h5>Mo â€“ So</h5>
          <p><%= @spot.opening_hours %></p>
        </div>
      </div>

      <div class="reviews-section">
        <h3 class="show-h3">Reviews</h3>
        <% @spot.reviews.each do |review| %>
          <div class="card-show">
            <%= cl_image_tag review.user.photo.key, class: "avatar-large" %>
            <div class="card-show-infos">
              <h3><%= review.user.first_name %> <%= review.user.last_name %></h3>
              <p><%= review.content %></p>
              <p class="card-show-stars"><%= star_rating(review.rating, 5) %></p>
            </div>
          </div>
        <% end %>
      </div>

      <%= link_to 'Add Review', new_spot_review_path(@spot), class: 'btn-purple-full-width' %>
    </div>
  </div>
</div>
