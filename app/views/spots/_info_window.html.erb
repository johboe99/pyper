<div>
  <div class="row">
    <div class="col">
      <%= cl_image_tag spot.photo.key, class: "map-box-image" %>
    </div>
  </div>

   <div class="row mt-2">
    <% rating_sum = 0 %>
    <% spot.reviews.each do |review| %>
      <% rating_sum += review.rating %>
    <% end %>
    <% average_rating = (rating_sum / spot.reviews.count).to_f %>
    <p class="text-center map-box-rating"><%= star_rating(average_rating, 5) %></p>
  </div>

  <div class="row align-items-center">
    <div class="col-9">
      <h2 class="map-box-title"><%= spot.name %></h2>
      <p class="map-box-category"><%= spot.category.name %></p>
    </div>


    <div class="col-3 d-flex justify-content-center align-items-center text-center">
      <%= link_to ('<i class="fa-solid fa-plus" style="color: #9663f6;"></i>').html_safe, new_spot_review_path(spot), class: "btn-plus" %>
    </div>
  </div>

  <div class="d-flex justify-content-center border-top">
    <%= link_to 'See Details', spot, class: 'btn-purple mt-3' %>
  </div>
</div>
