<div>
  <div class="row align-items-center">
    <div class="col-6">
      <%= cl_image_tag spot.photo.key %>
    </div>
    <div class="col-6 d-flex justify-content-center align-items-center text-center">
      <div class="row">
        <p class="text-center"><%= star_rating(spot.average_rating, 5) %></p>
      </div>
    </div>
  </div>
  <div class="row align-items-center mt-3">
    <div class="col-9">
      <h2 class="card-home-title"><%= spot.name %></h2>
      <p><%= spot.category.name %></p>
    </div>
    <div class="col-3 d-flex justify-content-center align-items-center text-center">
      <%= link_to ('<i class="fa-solid fa-square-plus"></i>').html_safe, new_spot_review_path(spot), style: "color:white; font-size:20px" %>
    </div>
  </div>
  <div class="d-flex justify-content-center border-top">
    <%= link_to 'See Details', spot, class: 'btn-purple mt-3' %>
  </div>
</div>
