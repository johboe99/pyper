<div>
  <!-- Image Section -->
  <div class="row">
    <div class="col">
      <%= cl_image_tag spot.photo.key, class: "map-box-image" %>
    </div>
  </div>

  <!-- Rating Section -->
  <div class="row mt-2">
    <p class="text-center map-box-rating">
      <%= star_rating(spot.average_rating, 5) %>
    </p>
  </div>

  <!-- Content Section -->
  <div class="map-box-content d-flex justify-content-between align-items-center">
    <!-- Title and Category -->
    <div>
      <h2 class="map-box-title"><%= spot.name %></h2>
      <p class="map-box-category"><%= spot.category.name %></p>
    </div>

    <!-- Action Button -->
    <div>
      <%= link_to '<i class="fa-solid fa-plus" style="color: #9663f6;"></i>'.html_safe,
          new_spot_review_path(spot),
          class: "btn-plus d-flex justify-content-center align-items-center" %>
    </div>
  </div>

  <!-- Details Link -->
  <div class="d-flex justify-content-center border-top">
    <%= link_to 'See Details', spot, class: 'btn-purple mt-3' %>
  </div>
</div>

